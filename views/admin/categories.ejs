<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories - Multiverse Cloud Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>

<body class="admin-body">
    <%- include('partials/sidebar', { active: 'categories' , admin: admin }) %>

        <div class="admin-main">
            <header class="admin-header">
                <button class="sidebar-toggle" id="sidebarToggle"><i class="fas fa-bars"></i></button>
                <h2>Categories</h2>
                <div class="admin-user">
                    <a href="/admin/categories/create" class="btn btn-primary btn-sm"><i class="fas fa-plus"></i> New
                        Category</a>
                </div>
            </header>

            <div class="admin-content">
                <% if (categories.length> 0) { %>
                    <div class="table-card">
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(cat=> { %>
                                    <tr>
                                        <td>
                                            <% if (cat.image) { %>
                                                <img src="<%= cat.image %>" alt="<%= cat.name %>" class="table-img">
                                                <% } else { %>
                                                    <div class="table-img-placeholder"><i class="fas fa-image"></i>
                                                    </div>
                                                    <% } %>
                                        </td>
                                        <td><strong>
                                                <%= cat.name %>
                                            </strong></td>
                                        <td class="desc-cell">
                                            <%= cat.description.substring(0, 80) %>
                                                <%= cat.description.length> 80 ? '...' : '' %>
                                        </td>
                                        <td>
                                            <%= new Date(cat.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <div class="table-actions">
                                                <a href="/admin/categories/edit/<%= cat._id %>"
                                                    class="btn btn-sm btn-outline" title="Edit"><i
                                                        class="fas fa-edit"></i></a>
                                                <form action="/admin/categories/delete/<%= cat._id %>" method="POST"
                                                    onsubmit="return confirm('Delete this category and all its packages?')">
                                                    <button type="submit" class="btn btn-sm btn-danger"
                                                        title="Delete"><i class="fas fa-trash"></i></button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="admin-empty">
                            <i class="fas fa-layer-group"></i>
                            <h3>No Categories Yet</h3>
                            <p>Create your first category to get started.</p>
                            <a href="/admin/categories/create" class="btn btn-primary"><i class="fas fa-plus"></i>
                                Create Category</a>
                        </div>
                        <% } %>
            </div>
        </div>
        <script src="/js/admin.js"></script>
</body>

</html>